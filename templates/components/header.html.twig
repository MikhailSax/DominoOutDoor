<header class="sticky top-0 z-50 border-b border-gray-200 bg-white/95 backdrop-blur">
    <div class="mx-auto flex h-18 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
        <a href="{{ path('app_homepage') }}" class="text-2xl font-black tracking-tight text-red-600">
            Domino <span class="text-red-400">Outdoor</span>
        </a>

        <nav class="hidden items-center gap-7 text-sm font-medium text-gray-700 md:flex">
            <a href="{{ path('app_homepage') }}#formats" class="hover:text-red-600">Форматы</a>
            <a href="{{ path('app_map_app') }}" class="hover:text-red-600">Карта конструкций</a>
            <a href="{{ path('app_homepage') }}#cases" class="hover:text-red-600">Кейсы</a>
            <a href="{{ path('app_homepage') }}#faq" class="hover:text-red-600">FAQ</a>
            <a href="{{ path('app_static_pages') }}" class="hover:text-red-600">О компании</a>
        </nav>

        <div class="hidden items-center gap-3 md:flex">
            {% if app.user %}
                <a href="{{ path('profile') }}" class="rounded-lg border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:border-red-300 hover:text-red-600">
                    Профиль
                </a>
                <a href="{{ path('app_logout') }}" class="rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white hover:bg-red-700">
                    Выйти
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="rounded-lg border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:border-red-300 hover:text-red-600">
                    Войти
                </a>
                <a href="{{ path('app_register') }}" class="rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white hover:bg-red-700">
                    Регистрация
                </a>
            {% endif %}
        </div>

        <button id="mobile-menu-button" class="rounded-md p-2 text-gray-700 hover:bg-gray-100 md:hidden" aria-label="Открыть меню">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
    </div>

    <div id="mobile-menu" class="hidden border-t border-gray-200 bg-white px-4 py-4 md:hidden">
        <nav class="space-y-2 text-sm font-medium text-gray-700">
            <a href="{{ path('app_homepage') }}#formats" class="block rounded-md px-3 py-2 hover:bg-red-50 hover:text-red-600">Форматы</a>
            <a href="{{ path('app_map_app') }}" class="block rounded-md px-3 py-2 hover:bg-red-50 hover:text-red-600">Карта конструкций</a>
            <a href="{{ path('app_homepage') }}#cases" class="block rounded-md px-3 py-2 hover:bg-red-50 hover:text-red-600">Кейсы</a>
            <a href="{{ path('app_homepage') }}#faq" class="block rounded-md px-3 py-2 hover:bg-red-50 hover:text-red-600">FAQ</a>
            <a href="{{ path('app_static_pages') }}" class="block rounded-md px-3 py-2 hover:bg-red-50 hover:text-red-600">О компании</a>
        </nav>

        <div class="mt-4 border-t border-gray-200 pt-4">
            {% if app.user %}
                <a href="{{ path('profile') }}" class="mb-2 block rounded-lg border border-gray-300 px-4 py-2 text-center text-sm font-medium">Профиль</a>
                <a href="{{ path('app_logout') }}" class="block rounded-lg bg-red-600 px-4 py-2 text-center text-sm font-semibold text-white">Выйти</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="mb-2 block rounded-lg border border-gray-300 px-4 py-2 text-center text-sm font-medium">Войти</a>
                <a href="{{ path('app_register') }}" class="block rounded-lg bg-red-600 px-4 py-2 text-center text-sm font-semibold text-white">Регистрация</a>
            {% endif %}
        </div>
    </div>
</header>
