        <!-- Скрипты: reveal, lazy-bg, простая отправка формы через AJAX (опционально) -->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Intersection Observer для .reveal
                const revealEls = document.querySelectorAll('.reveal');
                if ('IntersectionObserver' in window) {
                    const io = new IntersectionObserver((entries, obs) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                entry.target.classList.add('is-visible');
                                obs.unobserve(entry.target);
                            }
                        });
                    }, { threshold: 0.15 });
                    revealEls.forEach(el => io.observe(el));
                } else {
                    revealEls.forEach(el => el.classList.add('is-visible'));
                }

                // Lazy load background images для секций с data-bg
                const bgEls = document.querySelectorAll('[data-bg]');
                if ('IntersectionObserver' in window) {
                    const bgIo = new IntersectionObserver((entries, obs) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                const el = entry.target;
                                el.style.backgroundImage = `url(${el.dataset.bg})`;
                                el.classList.add('bg-cover');
                                obs.unobserve(el);
                            }
                        });
                    }, { threshold: 0.05 });
                    bgEls.forEach(el => bgIo.observe(el));
                } else {
                    bgEls.forEach(el => el.style.backgroundImage = `url(${el.dataset.bg})`);
                }

                // Простая AJAX-отправка формы (если используете Symfony, укажите маршрут lead_submit в action или оставьте #)
                const form = document.getElementById('lead-form');
                if (form) {
                    form.addEventListener('submit', function (e) {
                        e.preventDefault();
                        const btn = form.querySelector('button[type="submit"]');
                        btn.disabled = true; btn.classList.add('opacity-60');
                        const data = new FormData(form);
                        const action = form.getAttribute('action') || '#';
                        fetch(action, {
                            method: 'POST',
                            body: data,
                            headers: { 'X-Requested-With': 'XMLHttpRequest' }
                        }).then(res => {
                            btn.disabled = false; btn.classList.remove('opacity-60');
                            if (res.ok) {
                                form.reset();
                                // Можно заменить на кастомный модал
                                alert('Спасибо — заявка принята. Мы свяжемся с вами.');
                            } else {
                                alert('Ошибка отправки. Попробуйте позже.');
                            }
                        }).catch(() => { btn.disabled = false; btn.classList.remove('opacity-60'); alert('Ошибка сети.'); });
                    });
                }
            });
        </script>
