{% extends 'base.html.twig' %}

{% block title %}История заказов{% endblock %}

{% block body %}
    <section class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">История заказов</h1>

        {% include 'profile/_tabs.html.twig' %}

        {# Фиктивные заказы для демонстрации #}
        {% set orders = [
            { id: 101, createdAt: date('now')|date_modify('-3 days'), status: 'выполнен', total: 4500 },
            { id: 102, createdAt: date('now')|date_modify('-10 days'), status: 'в обработке', total: 12000 },
            { id: 103, createdAt: date('now')|date_modify('-1 month'), status: 'отменён', total: 3000 }
        ] %}

        <div class="bg-white shadow-md rounded-lg overflow-hidden mt-6">
            <table class="min-w-full divide-y divide-gray-200 text-sm text-gray-700">
                <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left font-medium">ID</th>
                    <th class="px-6 py-3 text-left font-medium">Дата</th>
                    <th class="px-6 py-3 text-left font-medium">Статус</th>
                    <th class="px-6 py-3 text-left font-medium">Сумма</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                {% for order in orders %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">{{ order.id }}</td>
                        <td class="px-6 py-4">{{ order.createdAt|date('d.m.Y') }}</td>
                        <td class="px-6 py-4">
                                <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full
                                    {% if order.status == 'выполнен' %}
                                        bg-green-100 text-green-800
                                    {% elseif order.status == 'в обработке' %}
                                        bg-yellow-100 text-yellow-800
                                    {% else %}
                                        bg-gray-100 text-gray-800
                                    {% endif %}
                                ">
                                    {{ order.status }}
                                </span>
                        </td>
                        <td class="px-6 py-4 font-medium">{{ order.total }} ₽</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">У вас пока нет заказов.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
