{% set currentRoute = app.request.attributes.get('_route') %}

<div class="mb-8 border-b border-gray-200">
    <nav class="-mb-px flex flex-wrap gap-3 text-sm font-medium sm:gap-6" aria-label="Навигация личного кабинета">
        <a href="{{ path('profile') }}"
           class="rounded-t-lg px-3 py-2 transition {{ currentRoute == 'profile' ? 'border-b-2 border-red-600 text-red-600' : 'text-gray-500 hover:text-gray-700' }}">
            Профиль
        </a>
        <a href="{{ path('profile.orders') }}"
           class="rounded-t-lg px-3 py-2 transition {{ currentRoute == 'profile.orders' ? 'border-b-2 border-red-600 text-red-600' : 'text-gray-500 hover:text-gray-700' }}">
            Активность и заказы
        </a>
    </nav>
</div>
