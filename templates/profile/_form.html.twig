<section class="max-w-5xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-10">Редактировать профиль</h1>

    <form method="POST" action="" class="space-y-12 bg-white shadow-xl rounded-2xl p-10 border border-gray-200">
        <!-- Личные данные -->
        <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">Личная информация</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <label for="first_name" class="block text-base font-medium text-gray-700 mb-2">Имя</label>
                    <input type="text" name="first_name" id="first_name" placeholder="Введите имя"
                           class="block w-full px-5 py-4 text-base rounded-xl border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"
                           value="{{ user.getFirstName() }}">
                </div>

                <div>
                    <label for="last_name" class="block text-base font-medium text-gray-700 mb-2">Фамилия</label>
                    <input type="text" name="last_name" id="last_name" placeholder="Введите фамилию"
                           class="block w-full px-5 py-4 text-base rounded-xl border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"
                           value="{{ user.getLastName() }}">
                </div>

                <div>
                    <label for="phone" class="block text-base font-medium text-gray-700 mb-2">Телефон</label>
                    <input type="tel" name="phone" id="phone" placeholder="+7 (___) ___-__-__"
                           class="block w-full px-5 py-4 text-base rounded-xl border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"
                           value="{{ user.phone }}">
                </div>

                <div>
                    <label for="email" class="block text-base font-medium text-gray-700 mb-2">Email</label>
                    <input type="email" name="email" id="email" placeholder="example@example.com"
                           class="block w-full px-5 py-4 text-base rounded-xl border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"
                           value="{{ user.email }}">
                </div>
            </div>
        </div>

        <!-- Смена пароля -->
        <div class="pt-10 border-t border-gray-200">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">Смена пароля</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <label for="current_password" class="block text-base font-medium text-gray-700 mb-2">Текущий пароль</label>
                    <input type="password" name="current_password" id="current_password" placeholder="Введите текущий пароль"
                           class="block w-full px-5 py-4 text-base rounded-xl border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500">
                </div>

                <div>
                    <label for="new_password" class="block text-base font-medium text-gray-700 mb-2">Новый пароль</label>
                    <input type="password" name="new_password" id="new_password" placeholder="Введите новый пароль"
                           class="block w-full px-5 py-4 text-base rounded-xl border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500">
                </div>
            </div>
        </div>

        <!-- Кнопка -->
        <div class="pt-8">
            <button type="submit"
                    class="w-full sm:w-auto inline-flex justify-center items-center py-4 px-8 text-base font-semibold rounded-xl text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition">
                Сохранить изменения
            </button>
        </div>
    </form>
</section>

