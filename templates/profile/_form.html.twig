<section class="max-w-5xl">
    {{ form_start(profileForm, { attr: { class: 'space-y-8 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm sm:p-8' } }) }}

    {% if not profileForm.vars.valid %}
        <div class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            Пожалуйста, проверьте поля формы и исправьте ошибки.
        </div>
    {% endif %}

    <div>
        <h2 class="mb-6 text-xl font-semibold text-gray-900">Личная информация</h2>
        <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
            <div>
                {{ form_label(profileForm.first_name, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(profileForm.first_name, { attr: { class: 'block w-full rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-red-500 focus:ring-red-500' } }) }}
                <div class="mt-1 text-sm text-red-600">{{ form_errors(profileForm.first_name) }}</div>
            </div>

            <div>
                {{ form_label(profileForm.last_name, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(profileForm.last_name, { attr: { class: 'block w-full rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-red-500 focus:ring-red-500' } }) }}
                <div class="mt-1 text-sm text-red-600">{{ form_errors(profileForm.last_name) }}</div>
            </div>

            <div>
                {{ form_label(profileForm.phone, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(profileForm.phone, { attr: { class: 'block w-full rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-red-500 focus:ring-red-500' } }) }}
                <div class="mt-1 text-sm text-red-600">{{ form_errors(profileForm.phone) }}</div>
            </div>

            <div>
                {{ form_label(profileForm.email, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(profileForm.email, { attr: { class: 'block w-full rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-red-500 focus:ring-red-500' } }) }}
                <div class="mt-1 text-sm text-red-600">{{ form_errors(profileForm.email) }}</div>
            </div>
        </div>
    </div>

    <div class="border-t border-gray-200 pt-8">
        <h2 class="mb-2 text-xl font-semibold text-gray-900">Смена пароля</h2>
        <p class="mb-6 text-sm text-gray-500">Заполняйте оба поля только если хотите изменить пароль.</p>
        <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
            <div>
                {{ form_label(profileForm.currentPassword, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(profileForm.currentPassword, { attr: { class: 'block w-full rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-red-500 focus:ring-red-500' } }) }}
                <div class="mt-1 text-sm text-red-600">{{ form_errors(profileForm.currentPassword) }}</div>
            </div>

            <div>
                {{ form_label(profileForm.newPassword, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(profileForm.newPassword, { attr: { class: 'block w-full rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-red-500 focus:ring-red-500' } }) }}
                <div class="mt-1 text-sm text-red-600">{{ form_errors(profileForm.newPassword) }}</div>
            </div>
        </div>
    </div>

    <div class="flex flex-wrap items-center gap-3 border-t border-gray-100 pt-2">
        <button type="submit" class="inline-flex items-center rounded-xl bg-red-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-red-700">
            Сохранить изменения
        </button>
        <a href="{{ path('profile.orders') }}" class="inline-flex items-center rounded-xl border border-gray-300 px-5 py-3 text-sm font-medium text-gray-700 transition hover:border-red-300 hover:text-red-600">
            Перейти к активности
        </a>
    </div>

    {{ form_end(profileForm) }}
</section>
